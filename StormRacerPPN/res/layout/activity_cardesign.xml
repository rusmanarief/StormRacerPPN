<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="Car Concept"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/cardesign_swallow"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/cardesign_manta"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="The curved shape of the front body is inspired by the shape of swallow and manta ray. Swallow is the one of the fastest bird known. The curved-shaped wing of the swallow allows it to produce less drag when gliding up in the sky reaching speed up to 74 KM/H. For the manta ray, eventhough it is slow, the aerodynamics and the front shape of its body allowed it to glides &apos;elegantly&apos; in the water with less drag and resistance from the water itself."
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="16dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/cardesign_bullet" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="30dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="In order to decrease the aerodynamics of the car, the main body was designed based on the shaped of a long-ranged bullet. A long-ranged bullet has a long shank, long nose and boat-tail shape. The long nose will minimize the dispersion, thus creating less drag and resistance. Besides, the boat-tail shape of the bullet prevents turbulence forming behind the bullet and also reducing drag."
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="Car Design Gallery"
            android:textSize="30dp" />

        <HorizontalScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="580dp"
                    android:layout_height="387dp"
                    android:layout_margin="20dp"
                    android:scaleType="center"
                    android:src="@drawable/cardesign_1" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="580dp"
                    android:layout_height="387dp"
                    android:layout_margin="20dp"
                    android:scaleType="center"
                    android:src="@drawable/cardesign_2" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="580dp"
                    android:layout_height="387dp"
                    android:layout_margin="20dp"
                    android:scaleType="center"
                    android:src="@drawable/cardesign_3" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="580dp"
                    android:layout_height="387dp"
                    android:layout_margin="20dp"
                    android:scaleType="center"
                    android:src="@drawable/cardesign_4" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="580dp"
                    android:layout_height="387dp"
                    android:layout_margin="20dp"
                    android:scaleType="center"
                    android:src="@drawable/cardesign_5" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="580dp"
                    android:layout_height="387dp"
                    android:layout_margin="20dp"
                    android:scaleType="center"
                    android:src="@drawable/cardesign_6" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</ScrollView>